<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background"
tools:context=".workout.WorkoutFragment">

    <TextView
        android:id="@+id/exercises_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accent"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Workout"
        android:textStyle="bold"
        android:textSize="50sp"
        android:background="@drawable/top_background"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <ImageButton
        android:id="@+id/workout_start_workout_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_add_24"
        android:background="@drawable/button_background"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@id/exercises_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/exercises_title_tv"
        app:layout_constraintEnd_toEndOf="@id/exercises_title_tv">
    </ImageButton>

    <Button
        android:id="@+id/workout_add_plan_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Planned Workout"
        android:textColor="@color/light_text"
        android:background="@drawable/button_background"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercises_title_tv">
    </Button>

    <Button
        android:id="@+id/workout_my_workouts_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="My Workouts"
        android:textColor="@color/light_text"
        android:background="@drawable/button_background"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercises_title_tv">
    </Button>

    <ImageButton
        android:id="@+id/workout_finish_workout_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_check_24"
        android:background="@drawable/button_background"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@id/exercises_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/exercises_title_tv"
        app:layout_constraintEnd_toEndOf="@id/exercises_title_tv"
        android:visibility="gone">
    </ImageButton>

    <ImageButton
        android:id="@+id/workout_cancel_workout_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_delete_24"
        android:background="@drawable/button_background"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@id/exercises_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/exercises_title_tv"
        app:layout_constraintStart_toStartOf="@id/exercises_title_tv"
        android:visibility="gone">
    </ImageButton>

    <TextView
        android:id="@+id/workout_timer_tv"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="00:00:00"
        android:textSize="36dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textColor="@color/light_text"
        android:background="@drawable/button_background"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/exercises_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">
    </TextView>

    <HorizontalScrollView
        android:id="@+id/workout_scroll_view"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/workout_timer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/workout_card_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/workout_rest_timer_cl"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/workout_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <Button
            android:id="@+id/btnReset"
            android:text="@string/reset"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/resetButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </Button>

        <TextView
            android:id="@+id/workout_rest_timer_tv"
            android:text="2:00"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:textSize="36dp"
            android:textColor="@color/light_text"
            android:textAlignment="gravity"
            android:gravity="center"
            android:background="@drawable/button_background"
            app:layout_constraintStart_toEndOf="@id/btnReset"
            app:layout_constraintEnd_toStartOf="@id/btnStartStop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>

        <Button
            android:id="@+id/btnStartStop"
            android:text="@string/start"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/greenButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <ImageButton
        android:id="@+id/workout_planned_workouts_back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingStart="10dp"
        android:src="@drawable/baseline_back_24"
        android:background="@drawable/button_background"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@id/exercises_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/exercises_title_tv"
        app:layout_constraintStart_toStartOf="@id/exercises_title_tv"
        android:visibility="gone">
    </ImageButton>

    <ScrollView
        android:id="@+id/workout_planned_workouts_scroll_view"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/workout_timer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/workout_planned_workouts_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>