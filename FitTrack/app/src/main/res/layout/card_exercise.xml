<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="400dp"
    android:layout_margin="8dp"
    android:background="@drawable/card_background"
    android:backgroundTint="@color/top_background"
    app:cardCornerRadius="30dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/exercise_card_exercise_name_tv"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Exercise Name"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </TextView>

        <TextView
            android:id="@+id/exercise_card_exercise_muscle_tv"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Exercise Muscle"
            android:textAlignment="textStart"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise_card_exercise_name_tv"
            app:layout_constraintStart_toStartOf="@+id/exercise_card_exercise_name_tv">
        </TextView>

        <TextView
            android:id="@+id/exercise_card_exercise_equipment_tv"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Exercise Equipment"
            android:textAlignment="textStart"
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/exercise_card_exercise_muscle_tv"
            app:layout_constraintStart_toStartOf="@+id/exercise_card_exercise_name_tv">
        </TextView>

        <TextView
            android:id="@+id/exercise_card_exercise_type_tv"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Exercise Type"
            android:textAlignment="textStart"
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/exercise_card_exercise_equipment_tv"
            app:layout_constraintStart_toStartOf="@+id/exercise_card_exercise_name_tv">
        </TextView>

        <TextView
            android:id="@+id/exercise_card_exercise_difficulty_tv"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Exercise Difficulty"
            android:textAlignment="textStart"
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/exercise_card_exercise_type_tv"
            app:layout_constraintStart_toStartOf="@+id/exercise_card_exercise_name_tv">
        </TextView>

        <ImageButton
            android:id="@+id/exercise_card_more_info_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:src="@drawable/baseline_info_24"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="140dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </ImageButton>


        <ImageButton
            android:id="@+id/exercise_card_delete_exercise_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:src="@drawable/baseline_delete_24"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="140dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </ImageButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>