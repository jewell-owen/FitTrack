<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".StatsFragment">

    <TextView
        android:id="@+id/stats_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accent"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Statistics"
        android:textStyle="bold"
        android:textSize="50sp"
        android:background="@drawable/top_background"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stats_layout"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/stats_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_background">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stats_num_workouts_recycler"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:padding="0dp"
            android:background="@color/background"
            tools:listitem="@layout/card_num_workout_stat"
            android:visibility="invisible">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/stats_num_workouts_tv"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_button_background"
            android:text="XX"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:textAlignment="gravity">
        </TextView>

        <TextView
            android:id="@+id/profile_workouts_tv"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/stats_num_workouts_recycler"
            app:layout_constraintStart_toStartOf="@+id/stats_num_workouts_recycler"
            app:layout_constraintEnd_toEndOf="@+id/stats_num_workouts_recycler"
            android:background="@drawable/button_background"
            android:text="# Workouts"
            android:textColor="@color/light_text"
            android:gravity="center"
            android:textSize="14sp"
            android:textAlignment="gravity">
        </TextView>

        <TextView
            android:id="@+id/profile_num_sets_tv"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stats_num_workouts_recycler"
            app:layout_constraintEnd_toStartOf="@+id/profile_weight_lifted_tv"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button_background"
            android:text="XX"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:textAlignment="gravity">
        </TextView>

        <TextView
            android:id="@+id/profile_sets_tv"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_num_sets_tv"
            app:layout_constraintStart_toStartOf="@+id/profile_num_sets_tv"
            app:layout_constraintEnd_toEndOf="@+id/profile_num_sets_tv"
            android:background="@drawable/button_background"
            android:text="# Sets"
            android:textColor="@color/light_text"
            android:gravity="center"
            android:textSize="14sp"
            android:textAlignment="gravity">
        </TextView>

        <TextView
            android:id="@+id/profile_weight_lifted_tv"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button_background"
            android:text="XX"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:textAlignment="gravity">
        </TextView>

        <TextView
            android:id="@+id/profile_weight_tv"
            android:layout_width="84dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_weight_lifted_tv"
            app:layout_constraintStart_toStartOf="@+id/profile_weight_lifted_tv"
            app:layout_constraintEnd_toEndOf="@+id/profile_weight_lifted_tv"
            android:background="@drawable/button_background"
            android:text="Weight Lifted"
            android:textColor="@color/light_text"
            android:gravity="center"
            android:textSize="14sp"
            android:textAlignment="gravity">
        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>