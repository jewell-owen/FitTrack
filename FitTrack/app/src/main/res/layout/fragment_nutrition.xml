<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".NutritionFragment">

    <TextView
        android:id="@+id/nutrition_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/accent"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/nutrition"
        android:textStyle="bold"
        android:textSize="50sp"
        android:background="@drawable/top_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Previous Day Arrow -->
    <ImageButton
        android:id="@+id/plan_workouts_previous_day_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingStart="10dp"
        android:src="@drawable/baseline_back_24"
        android:background="@drawable/button_background"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/plan_workouts_date_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plan_workouts_date_btn" />

    <!-- "Today" Button -->
    <Button
        android:id="@+id/plan_workouts_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_date"
        android:textColor="@color/primary"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_title"
        app:layout_constraintStart_toEndOf="@id/plan_workouts_previous_day_btn"
        app:layout_constraintEnd_toStartOf="@id/plan_workouts_next_day_btn"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/top_background"
        android:background="@drawable/rounded_button_background"/>

    <!-- Next Day Arrow -->
    <ImageButton
        android:id="@+id/plan_workouts_next_day_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_forward_24"
        app:layout_constraintBottom_toBottomOf="@+id/plan_workouts_date_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plan_workouts_date_btn" />

    <!-- Total Calories -->
    <TextView
        android:id="@+id/total_calories_tv"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textColor="@color/primary"
        android:text="Total Calories: 0"
        android:textSize="25sp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/plan_workouts_date_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.66"
        android:layout_marginTop="0dp" />

    <!-- Daily Goal -->
    <TextView
        android:id="@+id/daily_goal_tv"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textColor="@color/secondary"
        android:text="Daily Goal: 2000"
        android:textSize="20sp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/total_calories_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.66"
        android:layout_marginTop="10dp" />

    <!-- Container to hold DateFragment -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/daily_goal_tv"
        android:layout_marginTop="20dp" />

    <!-- Meal Cards: 2x2 Grid -->
    <!-- Breakfast Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/breakfast_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/daily_goal_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintWidth_percent="0.48">

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="225dp">

        <TextView
            android:id="@+id/breakfast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Additional elements such as RecyclerView and plus button can be added here -->
    </LinearLayout>

